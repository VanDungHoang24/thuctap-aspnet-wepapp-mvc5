@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kết nối SQL Server</title>
   
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Kết nối SQL Server</h2>
        <form id="connectionForm">
            <div class="row mb-3">
                <label for="Server" class="col-sm-3 col-form-label text-end">Máy chủ (IP Address):</label>
                <div class="col-sm-6">
                    <input type="text" id="Server" name="Server" class="form-control" value="10.3.77.54" />
                </div>
            </div>
            <div class="row mb-3">
                <label for="Database" class="col-sm-3 col-form-label text-end">Tên cơ sở dữ liệu:</label>
                <div class="col-sm-6">
                    <input type="text" id="Database" name="Database" class="form-control" value="DBA12" />
                </div>
            </div>
            <div class="row mb-3">
                <label for="Username" class="col-sm-3 col-form-label text-end">Tài khoản:</label>
                <div class="col-sm-6">
                    <input type="text" id="Username" name="Username" class="form-control" value="svtt" />
                </div>
            </div>
            <div class="row mb-3">
                <label for="Password" class="col-sm-3 col-form-label text-end">Mật khẩu:</label>
                <div class="col-sm-6">
                    <input type="password" id="Password" name="Password" class="form-control" value="svtt" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <button type="button" class="btn btn-primary me-2" onclick="testConnection()">Kiểm tra kết nối</button>
                    <button type="button" id="btnSave" class="btn btn-success me-2">Lưu</button>
                    <button type="button" id="btnDefault" class="btn btn-secondary">Mặc định</button>
                </div>
            </div>
        </form>

        <div id="result" class="mt-4"></div>
    </div>
</body>
</html>

<script>
   

    // Hàm kiểm tra kết nối
    function testConnection() {
        const server = $('#Server').val();
        const database = $('#Database').val();
        const username = $('#Username').val();
        const password = $('#Password').val();

        console.log("Gửi yêu cầu kiểm tra kết nối...");
        console.log({ server, database, username, password });

        // Gửi yêu cầu Ajax
        $.ajax({
            url: '/Home/TestConnection', // Đường dẫn đến hàm Controller
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({
                server: server,
                database: database,
                username: username,
                password: password
            }),
            success: function (data) {
                console.log("Dữ liệu nhận được:", data);
                const resultDiv = $('#result');
                if (data.success) {
                    resultDiv.html(`<div class="alert alert-success">${data.message}</div>`);
                } else {
                    resultDiv.html(`<div class="alert alert-danger">${data.message}</div>`);
                }
            },
            error: function (xhr, status, error) {
                console.error('Lỗi:', error);
                const resultDiv = $('#result');
                resultDiv.html(`<div class="alert alert-danger">Không thể kết nối đến server.</div>`);
            }
        });
    }
</script>



